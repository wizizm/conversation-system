{
  "server": {
    "name": "conversation-system",
    "version": "1.0.0",
    "description": "MCP Server for conversation system integration with Claude Desktop"
  },
  "api": {
    "base_url": "http://localhost:8000",
    "timeout": 30
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "features": {
    "auto_extract_topics": true,
    "auto_extract_keywords": true,
    "max_conversation_length": 1000
  }
}
